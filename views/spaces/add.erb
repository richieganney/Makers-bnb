<% require 'date' %>
<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <link rel=“stylesheet” href=“http://code.jquery.com/ui/1.10.3/themes/smoothness/jquery-ui.css” />
    <script src=“http://code.jquery.com/jquery-1.9.1.js”></script>
    <script src=“http://code.jquery.com/ui/1.10.3/jquery-ui.js”></script>

    <script src="/src/interface.js"></script>
    <script src="/src/jquery.js"></script>

    <link rel="stylesheet" href="/css/style.css">
    <title>List your space with Makers BnB</title>
  </head>
  <body>

    <div id="body-container">
      <div id="header">

      </div>
      <div id="left-third">
        <h1>List a space</h1>
        <p>Welcome to makers Bnb, please list your space so others can stay.</p>
        <form action="/spaces/add" method="post">
          <input type="text" name="title" placeholder="Enter the name of your listing"><br>
          <textarea name="description" rows="8" cols="80" maxlength="360" placeholder="Enter a description of your space"></textarea><br>
          <input type="text" name="address" placeholder="Enter an address"><br>
          <input type="text" name="price_per_night" placeholder="Please enter how much per night"><br>
          <label for="available_from">Available from:</label>
          <input type="text" name="available_from" value=""><br>
          <label for="available_to">Available to:</label>
          <input type="text" name="available_to" value=""><br>
          <input type="submit" name="submit" value="List my space">
        </form>
      </div>
      <div id="right-third">

      </div>
      <div id="footer">
        <h3>© Makers BnB</h3>
      </div>
    </div>
  </body>
</html>
